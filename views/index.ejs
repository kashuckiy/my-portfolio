<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>
    <%= user.firstname %>
      <%= user.lastname %> – Portfolio
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet">
</head>

<body>

  <div class="container mt-5">
    <div class="text-center mb-4">
      <img src="<%= user.photo_url %>" alt="Profile Photo" class="rounded-circle profile-img">
      <h1 class="mt-3">
        <%= user.firstname %>
          <%= user.lastname %>
      </h1>
      <h5 class="text-muted">
        <%= user.position %>
      </h5>
    </div>

    <div class="section-title">Skills</div>
    <div class="row">
      <% skills.forEach(skill=> { %>
        <div class="col-12 col-sm-6 col-lg-4 mb-3">
          <div class="d-flex justify-content-between align-items-center bg-white p-3 rounded shadow-sm">
            <span>
              <%= skill.name %>
            </span>
            <span class="skill-stars">
              <% for (let i=1; i <=5; i++) { %>
                <%= i <=skill.rating ? '★' : '☆' %>
                  <% } %>
            </span>
          </div>
        </div>
        <% }) %>
    </div>

    <div class="section-title">Previous Jobs</div>
    <div class="row">
      <% jobs.forEach(job=> { %>
        <div class="col-12">
          <div class="job-card">
            <h5 class="mb-1">
              <%= job.title %>
            </h5>
            <div class="text-muted mb-2">
              <%= job.company %>
            </div>
            <p class="mb-0">
              <%= job.responsibility %>
            </p>
          </div>
        </div>
        <% }) %>
    </div>
  </div>

</body>

</html>